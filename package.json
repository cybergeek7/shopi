  },
  "homepage": "https://github.com/cybergeek7/shopi#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.12.14"
  },
  "devDependencies": {
    "colors": "^1.4.0",
    "concurrently": "^6.2.0",
    "nodemon": "^2.0.7"
  }
